{
  "name": "@dimetrix/typescript-package-starter",
  "version": "1.0.0",
  "description": "TypeScript boilerplate for NPM or Github Packages",
  "author": {
    "name": "Dmitrii Selikhov",
    "email": "selikhov.dmitrey@gmail.com",
    "url": "https://www.linkedin.com/in/dimetrix"
  },
  "keywords": [
    "typescript",
    "github packages",
    "npm packages",
    "boilerplate",
    "starter",
    "template",
    "vite",
    "vitest",
    "eslint",
    "prettier"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idimetrix/typescript-package-starter.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/idimetrix/typescript-package-starter/issues",
    "email": "selikhov.dmitrey@gmail.com"
  },
  "homepage": "https://github.com/idimetrix/typescript-package-starter#readme",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx src/index.ts",
    "find": "tsx src/index.ts",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "deploy": "npm publish"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.67",
    "ai": "^5.0.93",
    "dotenv": "^17.2.3",
    "whoiser": "2.0.0-beta.9",
    "yargs": "^18.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/yargs": "^17.0.35",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.9"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@idimetrix"
  }
}
