{
  "name": "find-my-domain",
  "version": "2.0.8",
  "description": "AI-powered domain name generator with real-time WHOIS availability checking - Monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "author": {
    "name": "Dmitrii Selikhov",
    "email": "selikhov.dmitrey@gmail.com",
    "url": "https://www.linkedin.com/in/dimetrix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idimetrix/find-my-domain.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter @find-my-domain/web dev",
    "dev:cli": "pnpm --filter @find-my-domain/cli dev",
    "dev:all": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @find-my-domain/web build",
    "build:cli": "pnpm --filter @find-my-domain/cli build",
    "build:core": "pnpm --filter @find-my-domain/core build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "validate": "./scripts/pre-publish.sh",
    "validate:docs": "./scripts/validate-docs.sh",
    "prepublish": "pnpm clean && pnpm build && pnpm typecheck && pnpm lint && pnpm test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  }
}
